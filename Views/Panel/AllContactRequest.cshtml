@model IEnumerable<AspNetCoreBlog.Models.Contact>

@{
    ViewData["Title"] = "All Contact Requests";
}

<div class="container-fluid mt-5">
    <div class="row">
        <h2 style="border-bottom: .05rem solid #e5e5e5;width:100%" class="mb-3">All Contact Requests</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Email ID</th>
                        <th>Subject</th>
                        <th>Comments</th>
                        <th>Commented At</th>
                        <th>Delete </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model)
                    {
                        <tr>
                            <td>@contact.Id</td>
                            <td>@contact.FullName</td>
                            <td>@contact.Email</td>
                            <td>@contact.Subject</td>
                            <td>@contact.Comment</td>
                            <td>@contact.CommentedDate</td>
                            <td><a asp-controller="Panel" asp-action="ContactDelete" asp-route-id="@contact.Id"><i class="far fa-trash-alt"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>