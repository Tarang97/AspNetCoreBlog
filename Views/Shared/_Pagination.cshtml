@model IndexViewModel
<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center mb-4">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item disabled">
                <a class="page-link" asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category"
                   asp-route-search="@Model.Search" asp-route-pageNumber="@(Model.PageNumber - 1)">&laquo;</a>
            </li>
        }

        @foreach (var p in Model.Pages)
        {
            if (p == -1)
            {
                <li class="page-item">
                    <span> ... </span>
                </li>
            }
            else
            {
                <li class="page-item @(p == Model.PageNumber ? "active" : "")" aria-current="page">
                    <a class="page-link" asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category"
                       asp-route-search="@Model.Search" asp-route-pageNumber="@p">@p <span class="sr-only">(current)</span></a>
                </li>
            }

        }

        @if (Model.NextPage)
        {
            <li class="page-item disabled">
                <a class="page-link" asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category"
                   asp-route-search="@Model.Search" asp-route-pageNumber="@(Model.PageNumber + 1)">&raquo;</a>
            </li>
        }
    </ul>
</nav>